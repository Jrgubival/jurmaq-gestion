{
  "name": "jurmaq-gestion",
  "version": "1.0.0",
  "description": "Aplicación de gestión empresarial para JURMAQ EIRL",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "typescript": "^4.9.5"
  },
  "homepage": "./",
  "build": {
    "appId": "com.jurmaq.gestion",
    "productName": "JURMAQ Gestión Empresarial",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "src/main/**/*",
      "templates/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jrgubival/jurmaq-gestion.git"
  },
  "author": "Jorge Ubilla - JURMAQ EIRL",
  "license": "MIT"
}