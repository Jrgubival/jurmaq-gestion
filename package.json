{
  "name": "jurmaq-gestion",
  "version": "1.0.0",
  "description": "Aplicación de gestión empresarial para JURMAQ EIRL",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "webpack serve --mode development",
    "build": "npm run build:react && electron-builder",
    "build:react": "webpack --mode production",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "test": "jest"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "^5.11.10",
    "@mui/x-date-pickers": "^5.0.20",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.7",
    "docxtemplater": "^3.39.1",
    "electron": "^28.0.0",
    "file-saver": "^2.0.5",
    "fs-extra": "^11.1.0",
    "pizzip": "^3.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "style-loader": "^3.3.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "homepage": "./",
  "build": {
    "appId": "com.jurmaq.gestion",
    "productName": "JURMAQ Gestión Empresarial",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "src/main/**/*",
      "templates/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jrgubival/jurmaq-gestion.git"
  },
  "author": "Jorge Ubilla - JURMAQ EIRL",
  "license": "MIT"
}
